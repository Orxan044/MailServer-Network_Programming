<Window x:Class="MailServer.ComposeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailServer"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="ComposeWindow" Height="400" Width="300">
   
    <Grid>

        <StackPanel>
            <TextBlock Margin="5" FontSize="18">To</TextBlock>
            <TextBox x:Name="txtBoxTo" Height="30" FontSize="18" Margin="5" ></TextBox>
            <TextBlock Margin="5" FontSize="18">Body</TextBlock>
            <TextBox x:Name="txtBoxBody" Height="30" FontSize="18" Margin="5" ></TextBox>
            <TextBlock Margin="5" FontSize="18">Subject</TextBlock>
            <TextBox x:Name="txtBoxSubject" Height="130" FontSize="18" Margin="5" ></TextBox>
            <Button x:Name="btnSend" Background="GreenYellow" Width="120" FontSize="15" FontWeight="Bold"  Margin="5" Height="28" Click="btnSend_Click" >Send</Button>
        </StackPanel>
        
        
    </Grid>
</Window>
